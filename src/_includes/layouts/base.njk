<!doctype html>
<html lang="{{ metadata.language }}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title or metadata.title }}</title>
        <meta name="description" content="{{ description or metadata.description }}">
        <link rel="canonical" href="{{ page.url }}"/>
        <meta name="robots" content="index, follow"/>
        <meta property="og:title" content="{{ title or renderData.title or metadata.title }}"/>
        <meta property="og:url" content="{{ page.url }}"/>
        <meta property="og:description" content="{{ description }}"/>
        <meta property="og:image" content="/assets/img/mylogo.png"/>
        <meta property="og:type" content="article"/>
        <link rel="shortcut icon" type="image/jpg" href="/assets/img/mylogo.png"/>
        <link rel="stylesheet" href="{{ '/assets/style/normalize.css' | url }}">
        <link rel="stylesheet" href="{{ '/assets/style/typebase.css' | url }}">
        <link rel="stylesheet" href="{{ '/assets/style/style.css' | url }}">
        <link rel="stylesheet" href="{{ '/assets/style/fonts.css' | url }}">
        <link rel="stylesheet" href="{{ '/assets/style/prism-okadia.css' | url }}">
        <link rel="stylesheet" href="{{ '/icons/line-awesome/css/line-awesome.css' | url }}">
        <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
        <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
        {# <script defer src="{{ '/assets/js/theme.js' | url}}"></script> #}
    </head>
    <body>
        <header>
            <a class="item" href="/">
                <i class="las la-home"></i>
                Home</a>
            <a class="item" href="/blog/">
                <i class="las la-pen-alt"></i>
                Blog</a>
            <a class="item" href="/books/">
                <i class="las la-book"></i>
                Books</a>
            <a class="item" href="/newtab/">
                <i class="las la-plus"></i>
                NewTab</a>
            <a class="item" href="/rsrc/">
                <i class="las la-book-open"></i>
                rsrc</a>
        </header>
        <main {% if templateClass %} class="{{ templateClass }}" {% endif %}>
            {{ content | safe }}
        </main>
        <footer>
            {% include 'footer.njk' %}
        </footer>
    </body>
</html>
